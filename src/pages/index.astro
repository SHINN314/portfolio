---
import Layout from "@layouts/Layout.astro";
import Card from "@components/Card.astro";
import { Image } from "astro:assets";
import icon from "@images/icon.webp";
import LinkCard from "@components/LinkCard.astro";

const clubProperties: { title: string; description: string; url?: string }[] = [
	{
		title: "team411",
		description:
			"電気通信大学 産学官連携センター主催「ベンチャー工房」所属の大学公認サークルです。UEC Dashboardというプロジェクトに携わったり、プロジェクトのデータ分析を行っています。",
		url: "https://team411.net/",
	},
	{
		title: "ピアノの会",
		description:
			"ゆるくまったりピアノを弾いているサークルです。ピアノは弾けないので聞き専ですが、絶賛練習中です。",
		url: "http://www.piano.club.uec.ac.jp/top/",
	},
	{
		title: "執行委員会",
		description:
			"いわゆる生徒会的な立ち位置の組織です。2024年度ホームページの作成を担当しました。現在は引退済み。",
		url: "https://www.shikkou.gakuyukai.uec.ac.jp/",
	},
	{
		title: "調布祭実行委員会",
		description:
			"電気通信大学の学園祭である「調布祭」を運営している委員会です。第74回では技術局に所属しホームページの企画一覧の作成を担当しました。現在は引退済み。",
		url: "https://www.chofusai.jp/",
	},
];
---

<style>
	.root-content {
		padding: 0 5%;
	}
	@media screen and (768px <= width < 1140px) {
		.root-content {
			padding: 0 10%;
		}
	}
	@media screen and (1140px <= width) {
		.root-content {
			padding: 0 25%;
		}
	}

	.profile-container {
		display: flex;
		flex-direction: column;
		justify-content: center;
		align-items: center;
	}
	@media screen and (768px <= width) {
		.profile-container {
			flex-direction: row;
			justify-content: space-evenly;
		}
	}

	.icon-setting {
		justify-content: center;
		align-items: center;
		object-fit: cover;
		border-radius: 100%;
		padding: 1rem;
	}

	.profile-content {
		padding: 1rem;
	}

	.name {
		font-size: 2rem;
	}

	.property-content {
		font-size: 1rem;
	}

	.club-container {
		margin: 2rem 0;
	}

	.club-description {
		padding: 0 1rem;
	}
</style>

<Layout title="top" , description="SHINNのホームページ">
	<h1>HOME</h1>
	<div class="contents-container">
		<Card headingTitle="Profile">
			<div class="profile-container">
				<Image
					src={icon}
					alt="アイコンの画像"
					width="200"
					height="200"
					class="icon-setting"
				/>
				<div class="profile-content">
					<p class="name">木村 慎之介</p>
					<table class="property-content">
						<tbody>
							<tr>
								<th>Age:</th>
								<td>20</td>
							</tr>
							<tr>
								<th>University:</th>
								<td>電気通信大学</td>
							</tr>
							<tr>
								<th>Major:</th>
								<td>コンピュータサイエンス</td>
							</tr>
							<tr>
								<th>Favorite:</th>
								<td>アニメ・音楽・数学</td>
							</tr>
						</tbody>
					</table>
				</div>
			</div>
		</Card>
		<h2>Clubs</h2>
		<p>所属しているサークル一覧です。</p>
		{
			clubProperties.map((clubProperty) => (
				<div class="club-container">
					<h3>{clubProperty.title}</h3>
					<div class="club-description">
						<p>{clubProperty.description}</p>
						{clubProperty.url && <LinkCard slug={clubProperty.url} />}
					</div>
				</div>
			))
		}
	</div>
</Layout>
