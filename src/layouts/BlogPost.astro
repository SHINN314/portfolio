---
import BaseHead from "@components/BaseHead.astro";
import Footer from "@components/Footer.astro";
import Header from "@components/Header.astro";
---

<style>
	.root-container {
		padding: 0 5%;
	}
	@media screen and (768px <= width < 1140px) {
		.root-container {
			padding: 0 10%;
		}
	}
	@media screen and (1140px <= width) {
		.root-container {
			padding: 0 25%;
		}
	}
</style>
<html lang="ja">
	<head>
		<BaseHead title="blog" , description="blog page" />
	</head>
	<body>
		<Header />
		<div class="root-contaier">
			<slot />
		</div>
		<Footer />
	</body>
</html>
