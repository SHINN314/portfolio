---
import noImage from "@images/no_image.webp";
import Card from "@components/Card.astro";
import { Image } from "astro:assets";
import type { ImageMetadata } from "astro";

interface Props {
	postId: string;
	image?: string | null;
	title: string;
	pubDate: Date;
}

const { postId, image, title, pubDate } = Astro.props;

const displayImage: string | ImageMetadata = image || noImage;
---

<style>
	.root-container {
		width: 100%;
	}

	.hero-image-container {
		width: 100%;
		height: auto;
	}

	.post-title {
		display: flex;
		justify-content: center;
		margin: 1rem 0;
		font-size: 1.5rem;
	}

	.post-date {
		display: flex;
		justify-content: center;
		margin: 1rem 0;
	}
</style>
<Card>
	<a href={postId}>
		<Image src={displayImage} inferSize alt="" class="hero-image-container" />
		<div class="post-title">{title}</div>
		<div class="post-date">{pubDate.getFullYear()}年{pubDate.getDay()}月</div>
	</a>
</Card>
